<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.editnotepage.EditNoteActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginVertical="20dp"
      >
      <ImageButton
          android:id="@+id/back_ib"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="0dp"
          android:src="@drawable/ic_arrow_back_ios"
          android:contentDescription="@string/back_btn"
          android:background="@drawable/bg_transparent"
          />
      <TextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/padding_default"
          android:text="@string/editNotePageTitle"
          android:textSize="16sp"
          />
      <ImageButton
          android:id="@+id/note_options"
          android:padding="0dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_more_vert"
          android:contentDescription="@string/more_btn"
          android:background="@drawable/bg_transparent"
          android:visibility="visible"
          />
        <ImageButton
            android:id="@+id/save_note"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:contentDescription="@string/more_btn"
            android:background="@drawable/bg_transparent"
            app:tint="@color/primary_color"
            android:visibility="gone"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_text_model_date"
        android:textSize="13sp"
        android:layout_marginHorizontal="@dimen/page_margin"
        />
    <EditText
        android:id="@+id/title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/note_text_model_title"
        android:background="@drawable/bg_transparent"
        android:textSize="20sp"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginVertical="@dimen/padding_default"
        android:autofillHints=""
        android:inputType="text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/body_tet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/page_margin"
        android:paddingVertical="@dimen/padding_default"
        android:background="@drawable/bg_transparent"
        android:hint="@string/note_body"
        />

</LinearLayout>